<%- model_class = Team -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:sso) %>:</strong></dt>
  <dd><%= @team.sso %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @team.name %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @team.email %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @team.url %>&nbsp;</dd>
  <dt><strong>Servers:</strong></dt>
  <dd>
    <ul>
      <% if @servers != nil %>
        <% @servers.each do |svr| %>
        <li><%= link_to svr.name, server_path(svr)  %></li>
        <% end %>
      <% end %>
    </ul>&nbsp;
  </dd>
  <dt><strong>Applications:</strong></dt>
  <dd>
    <ul>
      <% if @applications != nil %>
        <% @applications.each do |app| %>
        <li><%= link_to app.name, application_path(app)  %></li>
        <% end %>
      <% end %>
    </ul>&nbsp;
  </dd>
  <dt><strong>Services:</strong></dt>
  <dd>
    <ul>
      <% if @services != nil %>
        <% @services.each do |svc| %>
        <li><%= link_to svc.name, service_path(svc)  %></li>
        <% end %>
      <% end %>
    </ul>
  </dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              teams_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_team_path(@team), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              team_path(@team),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
